<div class="home-banner", style="background-image: url(<%= asset_path 'background5.jpg' %>)">
  <h1>List of cocktails</h1>
</div>

<div class="container">
  <h2 class="text-center">Check them out!</h2>
  <div class="cards">
    <ul>
        <% @cocktails.each do |cocktail| %>
      <div class="card col-xs-3", style="background-image: url(<%= asset_path 'cocktail2.jpg' %>)">
        <div class= "container"><li><p><%= link_to cocktail.name, cocktail_path(cocktail) %></p></li>
        </div>
      </div>
        <% end %>
    </ul>
  </div>
  <p><%= link_to "Create a new cocktail", new_cocktail_path %></p>
</div>


